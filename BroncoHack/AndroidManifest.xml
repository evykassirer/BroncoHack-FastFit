<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.broncohack"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.broncohack.MainActivity"
            android:label="@string/app_name" 
            android:screenOrientation="portrait" 
            android:configChanges="keyboardHidden|orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.broncohack.ExerciseActivity"
            android:label="@string/title_activity_exercise" 
            android:parentActivityName="com.example.broncohack.MainActivity"
            android:screenOrientation="portrait" 
            android:configChanges="keyboardHidden|orientation|screenSize">
             <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.example.broncohack.MainActivity" />
        </activity>
    </application>

</manifest>
